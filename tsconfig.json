{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [ "src/*.spec.ts" ]
}
